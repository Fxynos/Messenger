<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBarLayoutStyle">
        <item name="android:background">?android:attr/statusBarColor</item>
    </style>

    <style name="TitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="SubtitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BaseTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/BaseTextAppearance</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/BaseTextAppearance</item>
        <item name="android:background">@drawable/shape_rounded_small</item>
        <item name="android:backgroundTint">@color/gray_red</item>
        <item name="android:textColorHint">@color/gray_darker</item>
        <item name="android:textColor">@color/gray_darker</item>
        <item name="android:padding">16dp</item>
        <item name="android:colorAccent">@color/red_blind</item>
        <item name="android:textCursorDrawable">@drawable/edittext_cursor</item>
    </style>
    <!--  -->

    <style name="FilledButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/BaseTextAppearance</item>
        <item name="android:background">@drawable/shape_rounded_small</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:backgroundTint">@color/button</item>
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAppearance">@style/BaseTextAppearance</item>
        <item name="android:textColor">@color/red_blind</item>
        <item name="android:textStyle">normal</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="ImageViewStyle">
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="IconStyle">
        <item name="android:scaleType">fitCenter</item>
        <item name="tint">@color/red_light</item>
    </style>

    <style name="ImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@null</item>
        <item name="tint">@color/red_light</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.Messenger">
        <item name="android:background">@color/gray_dark</item>
    </style>

</resources>